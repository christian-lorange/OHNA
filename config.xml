<preference name="xwalkMultipleApk" value="false" />
<plugin name="cordova-plugin-crosswalk-webview" spec="2.2.0"/>
<plugin name="cordova-plugin-legacy-whitelist" spec="1.1.1"/>
<platform  name="ios">
